<form id="thread-post-form" class="form-vertical" method="post" action="{{ path('class_thread_post', {classId:thread.classId, threadId:thread.id}) }}" data-auto-submit="false" novalidate>
  <div class="form-group">
    <div class="controls">
      <textarea id="post-content-field" class="form-control" name="content" rows="8" data-display="回复内容"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="controls clearfix">
      <button type="submit" class="btn btn-primary pull-right">添加回复</button>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>