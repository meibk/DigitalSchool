{% import 'TopxiaAdminBundle::macro.html.twig' as admin_macro %}
<tr id="user-table-tr-{{ user.id }}">
  <td width="80%">
    <div class="col-md-1">
      <a href="{{ path('user_show', {id:user.id}) }}">
        <img class="media-object pull-left"  width="48" height="48" src="{{file_path(user.smallAvatar, 'avatar.png')}}" alt="{{user.truename}}">
      </a>
    </div>
    <div class="col-md-11">
      <a href="{{ path('user_show', {id:user.id}) }}" target="_blank" >
        <strong>{{user.truename}}</strong>
        {% if user.locked %}
          <label class="label label-danger">禁</label>
        {% endif %}
      </a>
      <br>
      <span class="text-muted"><small>{{ user.number }}</small></span>
    </div>
  </td>

  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_user_show', {id:user.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#modal" data-toggle="modal" data-url="{{path('message_create', {toId:user.id})}}">发私信</a></li>
        
        <li><a class="remove-student" href="javascript:" title="移除学生{{user.truename}}" data-url="{{ path('admin_school_class_student_remove', {userId:user.id,classId:class.id}) }}">移除</a></li>
      </ul>
    </div>
  </td>
</tr>